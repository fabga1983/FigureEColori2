<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/shapeNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/touch_button"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/buttonCircle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:background="@drawable/circle_shape"
        android:contentDescription="@string/circle_desc" />

    <Button
        android:id="@+id/buttonSquare"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/square_shape"
        android:contentDescription="@string/square_desc"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/buttonTriangle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/triangle_shape"
        android:contentDescription="@string/triangle_desc"
        android:layout_margin="16dp"/>

</LinearLayout>